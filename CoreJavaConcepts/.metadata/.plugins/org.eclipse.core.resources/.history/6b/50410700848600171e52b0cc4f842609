package org.koushik.learning.trickyprograms;

public class Shift0sInArray {

	public static void main(String[] args) {
		
		int a[] = {0,1,2,0,4,0,0,5,0,0};
		
		int firstPosOfZero = 0;
		
		for(int i=0;i<a.length;i++){
			if(a[i]==0){
				if(a[i+1]!=0){
					firstPosOfZero = i;
				}
			}
			else{
				//
				if(a[i+1]!=0){
					a[i] = a[i+1];
					a[i+1] = 0;
					firstPosOfZero = i;
				}
			}
		}
		
		for(int i=0;i<a.length;i++){
			System.out.println(a[i]);
		}
	}
}
