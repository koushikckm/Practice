package org.koushik.learning.trickyprograms;

public class Shift0sInArray {

	public static void main(String[] args) {
		
		int a[] = {0,1,2,0,4,0,0,5,0,0};
		System.out.println("Elementa of array");
		for(int i=0;i<a.length;i++){
			System.out.println(a[i]);
		}
		
		moeZerosToEnd(a);
		
		System.out.println("After moving 0's to end");
		for(int i=0;i<a.length;i++){
			System.out.println(a[i]);
		}
	}
	
	public static void moeZerosToEnd(int a[]){
		
		int count =0;
		
		for(int i=0;i<a.length;i++){
			if(a[i]!=0){
				a[count] = a[i];
				count++;
			}
		}
		while (count < a.length) {
            a[count] = 0;
            count++;
		}
	}
}
